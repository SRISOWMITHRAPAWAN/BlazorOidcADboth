@page "/" 
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />


<AuthorizeView>
    <Authorized>
        @foreach (var item in context.User.Claims)
        {
            <li><b>@item.Type</b>: @item.Value</li>
        }
    </Authorized>
</AuthorizeView>